	//adding commas to a number to format it
	addCommas: function(nStr)
	{
		nStr += '';
		x = nStr.split('.');
		x1 = x[0];
		x2 = x.length > 1 ? '.' + x[1] : '';
		var rgx = /(\d+)(\d{3})/;
		while (rgx.test(x1)) {
			x1 = x1.replace(rgx, '$1' + ',' + '$2');
		}
		return x1 + x2;
	},
	//Check to see if the data exists or is null 
	keyExists: function (key, object, value) {
		if (value == null)
			value = "";
		$(key.split(".")).each(function(i, v) {
			if (v in object) 
				object = object[v];
			else {
				object = value;
				return false;
			}
		});
		return object;
	},
